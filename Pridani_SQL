CREATE TABLE orders (order_userID varchar, order_amout SMALLINT, order_shipName varchar, order_shipAdress varchar, order_city varchar, order_state varchar, order_zip varchar, order_country varchar, order_phone SMALLINT, order_shipping_date timestamp, order_email SMALLINT, order_shipped SMALLINT, order_number SMALLINT);

CREATE TABLE orders_details (order_ID SMALLINT,products_ID SMALLINT, detail_name varchar ,detail_price SMALLINT, detail_SKU varchar, detail_quantity SMALLINT);

CREATE TABLE products (product_SKU varchar,product_name varchar, product_weight varchar ,product_price varchar, product_short_desc text, product_long_desc text, product_image varchar, product_stock SMALLINT, product_location varchar, product_parameters text, product_brand varchar, products_category_ID SMALLINT);

CREATE TABLE products_categories (category_ID smallint ,category_name varchar);

CREATE TABLE users (users_ID smallint,users_email varchar,users_password varchar,users_first_name varchar,users_last_name varchar,users_city varchar,users_state varchar,users_zip smallint,users_ip smallint,users_phone smallint,users_adress varchar);
